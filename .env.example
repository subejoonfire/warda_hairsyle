# Database Configuration
database.default.hostname = localhost
database.default.database = wardati_hairstyle_db
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.port = 3306

# App Configuration
app.baseURL = 'http://localhost:8080/'
app.indexPage = ''
app.appTimezone = 'Asia/Jakarta'

# Security
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'ci_session'
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

# Cookie
app.cookiePrefix = ''
app.cookieDomain = ''
app.cookiePath = '/'
app.cookieSecure = false
app.cookieHTTPOnly = false
app.cookieSameSite = 'Lax'

# CSRF
app.CSRFProtection = true
app.CSRFTokenName = 'csrf_token'
app.CSRFCookieName = 'csrf_cookie'
app.CSRFExpire = 7200
app.CSRFRegenerate = true
app.CSRFRedirect = true
app.CSRFSameSite = 'Lax'

# Content Security Policy
app.CSPEnabled = false

# Fonnte WhatsApp API Configuration
fonnte.api_key = "YOUR_FONNTE_API_KEY"
fonnte.base_url = "https://api.fonnte.com/send"
fonnte.device_id = "YOUR_DEVICE_ID"

# Email Configuration (if needed)
email.protocol = 'smtp'
email.SMTPHost = 'smtp.gmail.com'
email.SMTPUser = 'your-email@gmail.com'
email.SMTPPass = 'your-app-password'
email.SMTPPort = 587
email.SMTPCrypto = 'tls'
email.mailType = 'html'
email.charset = 'UTF-8'
email.validate = false
email.priority = 3
email.CRFLF = "\r\n"
email.newline = "\r\n"
email.BCCBatchMode = false
email.BCCBatchSize = 200
email.DSNServer = ''
email.DSNFrom = ''
email.DSNReturn = ''
email.DSNNotify = 'FAILURE'
email.DSNMax = 3