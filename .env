#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.indexPage = ''

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = wardati_hairstyle_db
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY
#--------------------------------------------------------------------

contentsecuritypolicy.reportOnly = false
contentsecuritypolicy.styleSrc = ["'self'", "'unsafe-inline'"]
contentsecuritypolicy.imageSrc = ["'self'", "data:", "https:"]
contentsecuritypolicy.fontSrc = ["'self'", "https:", "data:"]
contentsecuritypolicy.objectSrc = ["'none'"]
contentsecuritypolicy.mediaSrc = ["'self'"]
contentsecuritypolicy.frameSrc = ["'none'"]

#--------------------------------------------------------------------
# COOKIE
#--------------------------------------------------------------------

cookie.prefix = ''
cookie.expires = 0
cookie.path = '/'
cookie.domain = ''
cookie.secure = false
cookie.httponly = false
cookie.samesite = 'Lax'
cookie.raw = false

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

encryption.key = 'your-secret-key-here'
encryption.driver = OpenSSL
encryption.blockSize = 16
encryption.digest = SHA512

#--------------------------------------------------------------------
# HASH
#--------------------------------------------------------------------

hash.driver = 0
hash.cost = 10

#--------------------------------------------------------------------
# LANGUAGE
#--------------------------------------------------------------------

language = en

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# MIGRATIONS
#--------------------------------------------------------------------

migrations.enabled = false
migrations.table = migrations
migrations.path = Database/Migrations/

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = CodeIgniter\Session\Handlers\FileHandler
session.cookieName = ci_session
session.expiration = 7200
session.savePath = null
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# WHATSAPP API
#--------------------------------------------------------------------

whatsapp.api_url = 'https://api.fonnte.com/send'
whatsapp.api_token = 'your-whatsapp-api-token'
